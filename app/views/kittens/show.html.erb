<div class="container">
    <h1><%= @kitten.name %></h1>
    <p><%= "Age: #{@kitten.age}" %></p>
    <p><%= "Cuteness: #{@kitten.cuteness}" %></p>
    <p><%= "Softness: #{@kitten.softness}" %></p>
    
    <%= link_to "Back", kittens_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_kitten_path(@kitten), class: "btn btn-warning" %>
    <%= link_to "Delete", kitten_path(@kitten), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>

